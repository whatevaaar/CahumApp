<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"


        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/coordinatorLayout"
        android:background="@drawable/bg_mountain">
    <ImageView
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" app:srcCompat="@drawable/platform_mountain"
            android:id="@+id/escalon1"
            android:maxHeight="200dp" android:maxWidth="200dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.506" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" app:srcCompat="@drawable/platform_mountain"
            android:id="@+id/escalon5"
            android:maxHeight="200dp" android:maxWidth="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" app:srcCompat="@drawable/platform_mountain"
            android:id="@+id/escalon2"
            android:maxHeight="200dp" android:maxWidth="200dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintBottom_toTopOf="@+id/escalon1"
            app:layout_constraintTop_toBottomOf="@+id/escalon3" app:layout_constraintVertical_bias="0.18"/>
    <ImageView
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" app:srcCompat="@drawable/platform_mountain"
            android:id="@+id/escalon4"
            android:maxHeight="200dp" android:maxWidth="200dp"
            app:layout_constraintTop_toBottomOf="@+id/escalon5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintBottom_toTopOf="@+id/escalon3" android:contentDescription="TODO"/>
    <ImageView
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" app:srcCompat="@drawable/platform_mountain"
            android:id="@+id/escalon3"
            android:maxHeight="200dp" android:maxWidth="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.76" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_menu_send" android:id="@+id/floatingBotonEnviar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:backgroundTint="@color/colorAccent" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp" android:focusable="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_menu_manage"
            android:id="@+id/floatingBotonPerfil" app:layout_constraintBottom_toTopOf="@+id/floatingBotonEnviar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" android:layout_marginBottom="24dp"
            app:backgroundTint="#F7B814" android:focusable="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/player" android:id="@+id/imgPersonaje1"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="64dp"
            android:visibility="invisible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/player" android:id="@+id/imgPersonaje0"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.15"
            android:visibility="invisible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/player" android:id="@+id/imgPersonaje3"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/escalon3" app:layout_constraintEnd_toEndOf="@+id/escalon3"
            app:layout_constraintBottom_toBottomOf="@+id/escalon3" android:layout_marginBottom="64dp"
            android:visibility="invisible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/player" android:id="@+id/imgPersonaje4"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/escalon4" app:layout_constraintEnd_toEndOf="@+id/escalon4"
            app:layout_constraintBottom_toBottomOf="@+id/escalon4" android:layout_marginBottom="64dp"
            android:visibility="invisible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/player" android:id="@+id/imgPersonaje2"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/escalon2" app:layout_constraintEnd_toEndOf="@+id/escalon2"
            app:layout_constraintBottom_toBottomOf="@+id/escalon2" app:layout_constraintHorizontal_bias="0.393"
            android:layout_marginBottom="64dp" android:visibility="invisible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/player" android:id="@+id/imgPersonaje5"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/escalon5" app:layout_constraintEnd_toEndOf="@+id/escalon5"
            app:layout_constraintBottom_toBottomOf="@+id/escalon5" android:layout_marginBottom="64dp"
            android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>